<section>
<div class="container">
  <div class="row mt-4">
    <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
  </div>
 <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Item Name</th>
      <th scope="col">Description</th>
      <th scope="col">Category</th>
            <th scope="col">Image</th>

    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td>1</td>
      <td>{{this.name}}</td>
      <td>{{this.description}}</td>
      <td>{{this.category}}</td>
      <td><img src="{{this.image}}" height="100px",width50px></img></td>

    </tr>
    {{/each}}
  </tbody>
</table>
</div>   


</section>